$:.push File.expand_path('../../lib', __FILE__)

require 'io/console'
require 'winrm'

def help_msg
  puts "Usage: rwinrmcp sourcefile user@host:directory/targetfile"
  puts ""
end

def parse_options
  options = {}
  raise "Missing required options" unless ARGV.length == 2
  
  options[:source_path] = ARGV[0]
  raise "Cannot find source file: #{options[:source_path]}" unless File.exists?(options[:source_path])

  m = /^(?<user>\w+)@{1}(?<host>[a-zA-Z0-9\.]+)(?<port>:[0-9]+)?:{1}(?<file>.+)/.match(ARGV[1])
  raise "#{ARGV[1]} is an invalid destination" unless m
  options[:user] = m[:user]
  options[:endpoint] = "http://#{m[:host]}#{m[:port] || ':5985'}/wsman"
  options[:dest_path] = m[:file]

  # Get the password
  print "Password: "
  options[:pass] = STDIN.noecho(&:gets).chomp
  puts

  # Set some defaults required by WinRM WS
  options[:auth_type] = :plaintext
  options[:basic_auth_only] = true

  options
rescue StandardError => e
  puts e.message
  help_msg
  exit 1
end

def file_manager(options)
  service = WinRM::WinRMWebService.new(
    options[:endpoint],
    options[:auth_type].to_sym,
    options)
  WinRM::FileManager.new(service)
end

def run(options)
  bytes = file_manager(options).upload(options[:source_path], options[:dest_path])
  puts "#{bytes} total bytes transfered"
  exit 0
rescue Interrupt
  # ctrl-c
rescue WinRM::WinRMAuthorizationError
  puts "Authentication failed, bad user name or password"
  exit 1
rescue StandardError => e
  puts e.message
  exit 1
end

run(parse_options())
